<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dayu.autophone.SysSetActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="是否显示信息悬浮窗"
        android:textColor="#ff0000ff"
        android:textSize="17sp" />

    <ToggleButton
        android:id="@+id/tgbtn_showinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:checked="true"
        android:text="ToggleButton" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tgbtn_showinfo"
        android:layout_marginBottom="10dp"
        android:background="#7d000000" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view1"
        android:layout_below="@+id/view1"
        android:layout_marginTop="10dp"
        android:text="信息悬浮窗字体大小"
        android:textColor="#ff0000ff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/tv_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        android:text="小字" />

    <TextView
        android:id="@+id/tv_zhong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_small"
        android:layout_alignBottom="@+id/tv_small"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/tv_small"
        android:textSize="18sp"
        android:text="中字" />

    <TextView
        android:id="@+id/tv_da"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_zhong"
        android:layout_alignBottom="@+id/tv_zhong"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/tv_zhong"
        android:textSize="21sp"
        android:text="大字" />

    <TextView
        android:id="@+id/tv_teda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_da"
        android:layout_alignBottom="@+id/tv_da"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/tv_da"
        android:text="特大字"
        android:textSize="24sp" />
     
      <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_teda"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#7d000000" />

     <TextView
         android:id="@+id/TextView02"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/view2"
         android:layout_below="@+id/view1"
         android:layout_marginTop="100dp"
         android:textColor="#ff0000ff"
         android:text="信息悬浮窗字体颜色"
         android:textSize="17sp" />
     
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/TextView02"
         android:layout_marginTop="10dp"
         android:orientation="horizontal"
         >
        <TextView
         android:id="@+id/tv_color_1"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
         android:layout_weight="1"
         android:background="#ff000000"
         />
        
        <TextView
         android:id="@+id/tv_color_2"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
		 android:layout_weight="1"
	     android:background="#ffffffff"
         />
        
        <TextView
         android:id="@+id/tv_color_3"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
		 android:layout_weight="1"
	     android:background="#ffff0000"
         />
        
        <TextView
         android:id="@+id/tv_color_4"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
		 android:layout_weight="1"
	     android:background="#ff00ff00"
          />
        
        <TextView
         android:id="@+id/tv_color_5"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
		 android:layout_weight="1"
	     android:background="#ff0000ff"
         />
        
        <TextView
         android:id="@+id/tv_color_6"
         android:layout_width="wrap_content"
         android:layout_height="50dp"
		 android:layout_weight="1"
	     android:background="#ff667755"
          />
         
     </LinearLayout>

     <TextView
         android:id="@+id/tv_ziticolor"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/tgbtn_showinfo"
         android:layout_alignTop="@+id/TextView02"
         android:background="#ff00ff00"
         android:text="   " />

     <TextView
         android:id="@+id/tv_zitisize"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignTop="@+id/TextView01"
         android:layout_toLeftOf="@+id/tv_ziticolor"
         android:textSize="17sp"
         android:text="预览" />

</RelativeLayout>